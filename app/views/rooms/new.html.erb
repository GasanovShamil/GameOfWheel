<h1>Ajouter un salon</h1>

<%= simple_form_for @room do |field| %>
	<div class="row">
		<div class="form-group col-lg-5">
			<p>
				<%= field.input :prize, label: 'Lot', class: 'form-control' %>
			</p>

			<p>
				<%= field.input :start_date, label: 'Nom', class: 'form-control' %>
			</p>

			<p>
				<%= field.input :end_date, label: 'Niveau', class: 'form-control' %>
			</p>
		</div>
	</div>

	<p>
		<%= field.submit 'Sauvegarder', class: 'btn btn-primary' %>
	</p>
<% end %>